<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center" >Create a new comment to <%= campground.title %></h1>
		<div style="width: 30% ;margin : 30px auto;">
			<form method="POST" action="/campgrounds/<%= campground._id %>/comments">
				<div class="form-group">
					<input  class = "form-control" type="text" name="comment[text]" placeholder="comment...">
				</div>
		
				<div class="form-group">
					<button class = "btn btn-primary btn-lg">submit!!</button>
				</div>
			</form>

		<a href="/campgrounds//<%= campground._id %>">Back</a>
			
		</div>
	</div>
</div>

